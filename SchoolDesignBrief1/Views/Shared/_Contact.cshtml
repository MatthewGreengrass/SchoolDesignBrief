@model IContactModel

<div class="controls">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Please enter your first name *"/>
                <div class="help-block with-errors">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Please enter your email *"/>
                <div class="help-block with-errors">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="UserTypeValue"></label>
                <select asp-for="UserTypeValue" asp-items="ContactModel.UserTypes" class="form-control" placeholder="Please choose a user type *"></select>
                <div class="help-block with-errors">
                    <span class="text-danger" asp-validation-for="UserTypeValue"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="School"></label>
                <textarea asp-for="School" class="form-control" placeholder="School *" rows="4"></textarea>
                <div class="help-block with-errors">
                    <span class="text-danger" asp-validation-for="School"></span>
                </div>
            </div>
        </div>
        @*<div class="col-md-12">
            <div class="form-group">
                <label asp-for="ClassValue"></label>
                <select asp-for="ClassValue" asp-items="ClassModel.Classes" class="form-control"></select>
                <div class="help-block with-errors">
                    <span class="text-danger" asp-validation-for="ClassValue"></span>
                </div>
            </div>
        </div>*@
        <div class="col-md-12">
            <input type="submit" class="btn btn-success btn-send" value="Submit">
        </div>
    </div>
</div>

 @if (Model.HasSuccessMessage)
{
    <div class="messages">
        <p class="alert alert-success">
            @Model.SuccessMessage
        </p>
    </div>
}